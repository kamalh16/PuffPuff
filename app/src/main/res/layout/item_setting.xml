<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless">

    <!-- Item Label -->
    <TextView
        android:id="@+id/item_settings_option_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_settings_delete_all_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Item Label" />

    <!-- Item Clear Data Icon -->
    <ImageView
        android:id="@+id/item_settings_delete_all_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_delete_sweep_black_24dp"
        android:tint="@color/colorPrimaryText"
        android:tintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="@+id/item_settings_option_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_settings_option_label" />

    <!-- Item Dark Theme Icon -->
    <ImageView
        android:id="@+id/item_settings_theme_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_invert_colors_black_24dp"
        android:tint="@color/colorPrimaryText"
        android:tintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="@+id/item_settings_option_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_settings_option_label" />


    <!-- Item About Icon -->
    <ImageView
        android:id="@+id/item_settings_about_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_info_black_24dp"
        android:tint="@color/colorPrimaryText"
        android:tintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="@+id/item_settings_option_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_settings_option_label" />

</androidx.constraintlayout.widget.ConstraintLayout>